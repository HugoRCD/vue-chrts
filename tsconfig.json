{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist"
    },
    "include": ["lib/**/*.ts", "lib/**/*.vue"],
    "exclude": ["node_modules", "dist"]
  }